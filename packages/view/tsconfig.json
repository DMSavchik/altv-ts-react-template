{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "strict": true,
    "lib": ["es6", "es7", "dom"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": [
    "src/__mocks__"
  ]
}